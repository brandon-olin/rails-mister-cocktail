<div class="container">
  <div class="cocktail-grid">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 100%;">
        <%= link_to cocktail_path(cocktail) do %>
          <img src="https://images.unsplash.com/photo-1541546006121-5c3bc5e8c7b9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1494&q=80" class="card-img-top">
          <div class="card-body">
            <p class="card-text"><%= cocktail.name %></p>
          </div>
        <% end %>
      </div>
  <% end %>
  </div>
</div>
