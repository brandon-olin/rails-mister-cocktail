<div class="container">
  <div class="cocktail-grid">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 100%;">
        <%= link_to cocktail_path(cocktail) do %>

          <div class="card-body">
            <p class="card-text"><%= cocktail.name %></p>
          </div>
        <% end %>
      </div>
  <% end %>
  </div>
</div>
